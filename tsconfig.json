{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "importHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["es2019", "es2020.bigint"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"]
}
